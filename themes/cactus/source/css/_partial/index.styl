.post-list
  padding: 0

  .post-item
    margin-bottom: 1rem
    margin-left: 0
    list-style-type: none

    .meta
      display: block
      margin-right: 16px
      color: $color-meta
      font-size: 14px

    time
      vertical-align: middle;

@media (min-width: 480px)
  .post-list
    .post-item
      display: flex
      margin-bottom: 5px

      .meta
        text-align: left


#projects
  display: grid
  grid-gap: 16px
  grid-template-columns: repeat(auto-fit,minmax(180px, 1fr))

  h1
    grid-column-start: 1
    grid-column-end: 4

  .ProjectCard
    border-radius: 8px
    height: 290px
    display: block
    background-image: none
    background-repeat: auto
    background-size: auto
    position: relative
    transition: transform 400ms ease-in-out

    &::before {
      content: ''
      position: absolute;
      top: 0
      left: 0
      bottom: 0
      right: 0
      background: inherit;
      z-index: -1
      filter: blur(30px)
      pointer-events: none
      opacity: 0
      transition: all 400ms ease-out
      border-radius: inherit
    }

    .ProjectCard__Name {
      position: absolute
      bottom: 24px
      margin: 0
      padding: 0 24px
      line-height: 1.2
    }

    h2
      font-size: 18px;
      color: #FFFFFF;

    &:hover
      cursor: pointer
      transform: translateY(-10px)

      &::before
        opacity: 0.65
        transform: translateY(23px)

    &:nth-child(2)
      background-image: linear-gradient(-179deg, #FF1A78 0%, #EC7A09 100%)

    &:nth-child(3)
      background-image: linear-gradient(-179deg, #1AD1FF 0%, #892DFF 100%)

    &:nth-child(4)
      background-image: linear-gradient(34deg, #1D0109 0%, #3F29BC 100%)

    &:nth-child(5)
      background-image: linear-gradient(-41deg, #8EFFA4 0%, #1FE4DE 100%)