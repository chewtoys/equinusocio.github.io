<section id="about">
  <% if (config.description) { %>
    <%- markdown(config.description) %>
  <% } %>
  <% if (theme.social_links) { %>
    <p>
      <%= __('index.find_me_on') %>
      <% var nb_links = Object.keys(theme.social_links).length %>
      <% var i = 0 %>
      <% for(var link in theme.social_links) { %>
        <% if (link == 'mail') { %>
        <% } else { %>
          <a class="icon" target="_blank" rel="noopener" href="<%- url_for(theme.social_links[link]) %>">
            <i class="fab fa-<%= link %>"></i>
          </a>
        <% } %>
      <% } %>
    </p>
  <% } %>
</section>

<section id="writing">
  <h1><%= __('index.articles') %></h1>
  <ul class="post-list">
    <% if (theme.posts_overview.show_all_posts) { %>
      <% var show_posts = page.posts.sort('date', 'desc') %>
    <% } else { %>
      <% var show_posts = site.posts.sort('date', 'desc').limit(theme.posts_overview.post_count || 5) %>
    <% } %>
    <% show_posts.each(function(post, i){ %>
      <li class="post-item">
        <%- partial('_partial/post/date', { post: post, class_name: 'meta', date_format: 'YYYY-MM-DD' }) %>
        <span><%- partial('_partial/post/title', { post: post, index: true, class_name: '' }) %></span>
      </li>
    <% }); %>
  </ul>
  <% if (theme.show_all_posts) { %>
    <%- partial('_partial/pagination') %>
  <% } %>
</section>

<% if (site.data.projects) { %>
<section id="projects">
  <h1><%= __('index.projects') %></h1>

  <% for(var obj in site.data.projects){ %>
    <a class="ProjectCard" href="<%= site.data.projects[obj].url %>"
      target="<%= site.data.projects[obj].target %>">
      <h2 class="ProjectCard__Name"><%= site.data.projects[obj].name %></h2>
    </a>
  <% } %>
</section>
<% } %>
